    <filter>
		<display-name>AdminFilter</display-name>
		<filter-name>AdminFilter</filter-name>
		<filter-class>com.lmlc.filter.AdminFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AdminFilter</filter-name>
		<url-pattern>/adminlmlc/*</url-pattern>
	</filter-mapping> 
  
  
    <filter>
		<display-name>AutoLoginFilter</display-name>
		<filter-name>AutoLoginFilter</filter-name>
		<filter-class>com.lmlc.filter.AutoLoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AutoLoginFilter</filter-name>
		<url-pattern>/index.html</url-pattern>
	</filter-mapping> 
  
	<filter>
		<display-name>ForceLoginFilter</display-name>
		<filter-name>ForceLoginFilter</filter-name>
		<filter-class>com.lmlc.filter.ForceLoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ForceLoginFilter</filter-name>
		<url-pattern>/main.jsp</url-pattern>
		<url-pattern>/statistic.jsp</url-pattern>
		<url-pattern>/51.jsp</url-pattern>
		<url-pattern>/userServer.jsp</url-pattern>
		<url-pattern>/JiZhang.me</url-pattern>
		<url-pattern>/delete.me</url-pattern>
		<url-pattern>/statistic.me</url-pattern>
		<url-pattern>/modifyBgd</url-pattern>
		<url-pattern>/jin.me</url-pattern>
		<url-pattern>/user.me</url-pattern>
		<url-pattern>/feedback.me</url-pattern>
		<url-pattern>/dialog.me</url-pattern>
	</filter-mapping>
	
 	<filter>
		<display-name>CompressionFilter</display-name>
		<filter-name>CompressionFilter</filter-name>
		<filter-class>com.lmlc.filter.CompressionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CompressionFilter</filter-name>
		<url-pattern>/JiZhang.me</url-pattern>
		<url-pattern>/statistic.me</url-pattern>
		<url-pattern>/user.me</url-pattern>
	</filter-mapping>
	
	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>
	
  <error-page>
	<exception-type>java.lang.Throwable</exception-type>
	<location>/errorPage.html</location>
  </error-page>	
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
