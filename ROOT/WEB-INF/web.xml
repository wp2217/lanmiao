    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JiZhang</servlet-name>
    <url-pattern>/JiZhang.me</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteJiZhang</servlet-name>
    <url-pattern>/delete.me</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
